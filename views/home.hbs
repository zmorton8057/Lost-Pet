<div class="container">
    <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
    <div class="container  animated fadeIn slow" id="cardContainer border border-secondary">
        <div class="row d-flex justify-content-center">
            <div class="col-1">
                <a href="/" id="arrowHover">
                    <button class="btn btn-primary-outline" id="arrow-right"><</button>
                </a>
            </div>
                <div class="col-lg-5 col-10">
                    <div class="card hovercard">
                        <div class="cardheader border border-secondary p-4" id="frame">
